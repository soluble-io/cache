{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": false,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": ".",
    "baseUrl": "..",
    "paths": {
      "@soluble/cache-interop": ["cache-interop/src"],
      "@soluble/cache-interop/*": ["cache-interop/src/*"],
      "@soluble/cache-ioredis": ["cache-ioredis/src"],
      "@soluble/cache-ioredis/*": ["cache-ioredis/src/*"],
      "@soluble/cache-redis": ["cache-redis/src"],
      "@soluble/cache-redis/*": ["cache-redis/src/*"]
    }
  },
  "include": ["test"],
  "exclude": ["node_modules"]
}
