{
  "name": "@soluble/cache-redis-client",
  "description": "Node @redis/client interop adapter",
  "version": "0.10.0",
  "license": "MIT",
  "homepage": "https://github.com/soluble-io/cache-interop/tree/main/packages/cache-redis-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/soluble-io/cache-interop.git",
    "directory": "packages/cache-redis-client"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "keywords": [
    "cache",
    "interop",
    "redis",
    "redis-client"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "directory": "_release/package"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "check-size": "size-limit",
    "check-dist": "es-check -v",
    "clean": "rimraf --no-glob ./dist ./build ./coverage ./out ./_release ./node_modules/.cache",
    "test": "yarn run test-unit",
    "test-unit": "jest --config jest.config.js --color $@",
    "typecheck": "tsc --noEmit",
    "typecheck-build": "tsc --project tsconfig.build.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.mts,.cts --cache --cache-location ../../.cache/eslint/cache-redis-client.eslintcache",
    "fix-all-files": "eslint --ext .ts,.tsx,.js,.jsx,.mjs,.cjs,.mts,.cts --fix",
    "fix-staged": "lint-staged --allow-empty",
    "ci-coverage-upload": "../../.github/scripts/download/codecov -F cacheNodeRedisUnit --dir ./coverage"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{yaml,json,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@redis/client": "^1.4.0",
    "@soluble/cache-interop": "workspace:^",
    "@soluble/dsn-parser": "workspace:^"
  },
  "devDependencies": {
    "@size-limit/file": "8.0.0",
    "@types/jest": "28.1.6",
    "cross-env": "7.0.3",
    "es-check": "7.0.0",
    "eslint": "8.23.0",
    "get-tsconfig": "4.2.0",
    "jest": "28.1.3",
    "rimraf": "3.0.2",
    "size-limit": "8.0.0",
    "ts-jest": "28.0.7",
    "tslib": "2.4.0",
    "tsup": "6.2.3",
    "typescript": "4.8.2"
  },
  "engines": {
    "node": "^14.13.1 || >=16"
  }
}
