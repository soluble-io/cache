{
  "name": "@soluble/cache-ioredis",
  "description": "IORedis cache interop adapter",
  "version": "0.11.0-canary.1",
  "license": "MIT",
  "homepage": "https://github.com/soluble-io/cache-interop/tree/main/packages/cache-ioredis",
  "repository": {
    "type": "git",
    "url": "https://github.com/soluble-io/cache-interop.git",
    "directory": "packages/cache-ioredis"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "keywords": [
    "cache",
    "interop",
    "ioredis"
  ],
  "jsnext:main": "dist/cache-ioredis.es.js",
  "source": "src/index.ts",
  "module": "dist/cache-ioredis.es.js",
  "main": "dist/cache-ioredis.js",
  "umd:main": "dist/cache-ioredis.umd.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "directory": "_release/package"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development microbundle watch",
    "build": "rimraf ./dist && cross-env NODE_ENV=production microbundle --tsconfig tsconfig.build.json --target node --format esm,cjs --no-compress && mv dist/cache-ioredis/src/*.d.ts dist/ && rm -rf dist/cache-ioredis/src/",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "check-dist": "es-check -v",
    "clean": "rimraf --no-glob ./dist ./build ./coverage ./out ./_release ./node_modules/.cache",
    "test": "run-s test-unit",
    "test-unit": "jest --config jest.config.js --color $@",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "typecheck-build": "tsc --project tsconfig.build.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "fix-staged": "lint-staged --allow-empty",
    "fix-all": "run-p fix:all:*",
    "fix-all-code": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "ci-coverage-upload": "../../.github/scripts/download/codecov -F cacheIORedisUnit --dir ./coverage"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{yaml,json,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@soluble/cache-interop": "workspace:^",
    "@soluble/dsn-parser": "workspace:^",
    "ioredis": "^5.0.6"
  },
  "devDependencies": {
    "@types/jest": "28.1.3",
    "cross-env": "7.0.3",
    "es-check": "6.2.1",
    "jest": "28.1.1",
    "microbundle": "0.15.0",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.5",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "^14.13.1 || >=16"
  }
}
