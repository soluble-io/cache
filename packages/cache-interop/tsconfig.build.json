{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./dist",
    "tsBuildInfoFile": "./tsconfig.build.tsbuildinfo" // for tsup rollup dts tsBuildInfoFile is required when using incremental
  },
  "exclude": ["*.test.ts"]
}
