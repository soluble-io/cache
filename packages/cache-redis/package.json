{
  "name": "@soluble/cache-redis",
  "description": "Node redis cache interop adapter",
  "version": "0.10.0-canary.1",
  "license": "MIT",
  "homepage": "https://github.com/soluble-io/cache-interop/tree/main/packages/cache-redis",
  "repository": {
    "type": "git",
    "url": "https://github.com/soluble-io/cache-interop.git",
    "directory": "packages/cache-redis"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "keywords": [
    "cache",
    "interop",
    "redis",
    "node-redis"
  ],
  "jsnext:main": "dist/cache-redis.es.js",
  "source": "src/index.ts",
  "module": "dist/cache-redis.es.js",
  "main": "dist/cache-redis.js",
  "umd:main": "dist/cache-redis.umd.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "directory": "_release/package"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development microbundle watch",
    "build": "rimraf ./dist && cross-env NODE_ENV=production microbundle --tsconfig tsconfig.build.json --format esm,cjs --target node --no-compress && mv dist/cache-redis/src/*.d.ts dist/ && rm -rf dist/cache-redis/src/",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "check-dist": "es-check -v",
    "clean": "rimraf --no-glob ./dist ./build ./coverage ./out ./_release ./node_modules/.cache",
    "test": "yarn run test-unit",
    "test-unit": "jest --config jest.config.js --color $@",
    "typecheck": "tsc --noEmit",
    "typecheck-build": "tsc --project tsconfig.build.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "fix-staged": "lint-staged --allow-empty",
    "ci-coverage-upload": "../../.github/scripts/download/codecov -F cacheNodeRedisUnit --dir ./coverage"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{yaml,json,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@soluble/cache-interop": "workspace:^",
    "@soluble/dsn-parser": "workspace:^"
  },
  "devDependencies": {
    "@types/jest": "28.1.6",
    "@types/redis": "2.8.32",
    "cross-env": "7.0.3",
    "es-check": "7.0.0",
    "jest": "28.1.3",
    "microbundle": "0.15.0",
    "redis": "3.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.7",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "peerDependencies": {
    "@types/redis": "^2.8.25",
    "redis": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@types/redis": {
      "optional": true
    },
    "redis": {
      "optional": false
    }
  },
  "engines": {
    "node": "^14.13.1 || >=16"
  }
}
