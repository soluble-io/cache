{
  "name": "cache-interop-monorepo",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/soluble-io/cache-interop",
  "repository": {
    "type": "git",
    "url": "https://github.com/soluble-io/cache-interop.git"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "is-ci || husky install",
    "?build-publishable-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-publishable-release": "yarn workspaces foreach -tv run build-publishable-release",
    "clean": "yarn workspaces foreach -ptv run clean",
    "test": "run-s 'test:*'",
    "test:unit": "yarn workspaces foreach -ptv --exclude '@soluble/*e2e*' --exclude 'cache-interop-docs' run test:unit",
    "test:e2e": "yarn clean && yarn workspaces foreach -ptv --include '@soluble/*e2e*' --exclude 'cache-interop-docs' run test:e2e",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "yarn build-publishable-release && changeset publish",
    "typecheck": "yarn workspaces foreach -ptv run typecheck",
    "lint": "yarn workspaces foreach -ptv run lint",
    "fix:staged": "yarn workspaces foreach -t run fix:staged",
    "reinstall": "yarn clean && yarn workspaces foreach -ptv run clean && npx rimraf@^3.0 --no-glob ./yarn.lock ./node_modules && yarn install",
    "coverage:publish": "codecov && yarn workspaces foreach -ptv run coverage:publish -- -f coverage/clover.xml",
    "deps:check": "npm-check-updates --deep --dep prod,dev,optional",
    "deps:update": "npm-check-updates -u --deep --dep prod,dev,optional",
    "docs:install": "cd ./docs && yarn install",
    "docs:start": "cd ./docs && yarn start",
    "docs:build": "cd ./docs && yarn build",
    "check:install": "yarn dlx @yarnpkg/doctor@^3.1.0 ."
  },
  "dependenciesMeta": {
    "cpu-features": {
      "built": false
    },
    "nan": {
      "built": false
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.18.0",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.2.4",
    "eslint-plugin-jest-formatting": "3.0.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-sonarjs": "0.10.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.3.1",
    "jest-cli": "27.3.1",
    "lint-staged": "11.2.6",
    "microbundle": "0.14.1",
    "moq.ts": "7.3.4",
    "npm-check-updates": "12.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "rollup": "2.60.0",
    "ts-jest": "27.0.7",
    "tslib": "2.3.1",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": "^12.14.0 || ^14.13.1 || >=16",
    "yarn": ">=1.19.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@3.2.0-rc.3"
}
