{
  "name": "@soluble/tci-monorepo",
  "private": true,
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "workspaces": [
     "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "dev": "lerna run start --stream --parallel",
    "build": "lerna run build",
    "build:microbundle": "lerna run build:microbundle",
    "clean": "lerna run clean",
    "clean:node_modules": "lerna run clean:node_modules",
    "test": "lerna run test",
    "test:unit:coverage": "lerna run test:unit:coverage",
    "prepublish": "lerna run build",
    "publish-canary": "lerna version prerelease --preid canary --force-publish",
    "publish-stable": "lerna version --force-publish",
    "typecheck": "lerna run typecheck --stream --parallel",
    "lint": "lerna run lint --stream",
    "fix:staged": "lerna run fix:staged",
    "deduplicate": "yarn-deduplicate yarn.lock",
    "reinstall": "lerna clean --yes && lerna run clean && npx rimraf@^3.0 --no-glob ./yarn.lock ./node_modules && yarn install",
    "coverage:publish": "codecov && lerna run coverage:publish -- -f coverage/clover.xml",
    "deps:check": "npx npm-check-updates@^9.1 && lerna exec -- yarn deps:check",
    "deps:update": "npx npm-check-updates@9.1 -u && lerna exec -- yarn deps:update"
  },
  "devDependencies": {

    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-cli": "^26.6.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.0",
    "microbundle": "^0.12.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "yarn-deduplicate": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream fix:staged"
    }
  },
  "engines": {
    "node": ">=10.13",
    "yarn": ">=1.19.0 <2.0.0",
    "npm": "please-use-yarn"
  }
}
