{
  "name": "cache-interop-monorepo",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/soluble-io/cache-interop",
  "repository": {
    "type": "git",
    "url": "https://github.com/soluble-io/cache-interop.git"
  },
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "is-ci || husky install",
    "?build-publishable-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "g:build-publishable-release": "yarn workspaces foreach -tv run build-publishable-release",
    "g:check-dist": "yarn workspaces foreach -tv --exclude '@soluble/*e2e*' --no-private run check-dist",
    "g:clean": "yarn workspaces foreach -ptv run clean",
    "g:test": "run-s g:test-unit g:test-e2e",
    "g:test-unit": "yarn workspaces foreach -ptv --exclude '@soluble/*e2e*' --exclude 'cache-interop-docs' run test-unit",
    "g:test-e2e": "yarn g:clean && yarn workspaces foreach -ptv --include '@soluble/*e2e*' --exclude 'cache-interop-docs' run test-e2e",
    "g:changeset": "changeset",
    "g:release": "yarn g:build-publishable-release && changeset publish",
    "g:typecheck": "yarn workspaces foreach -ptv run typecheck",
    "g:lint": "yarn workspaces foreach -ptv run lint",
    "g:fix-staged": "yarn workspaces foreach -t run fix-staged",
    "g:coverage-publish": "codecov && yarn workspaces foreach -ptv run coverage:publish -- -f coverage/clover.xml",
    "deps:check": "npm-check-updates --deep",
    "deps:update": "npm-check-updates --deep -u",
    "check:install": "yarn dlx @yarnpkg/doctor@^3.1.0 ."
  },
  "dependenciesMeta": {
    "cpu-features": {
      "built": false
    },
    "nan": {
      "built": false
    },
    "ssh2": {
      "built": false
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.3",
    "@changesets/cli": "2.21.0",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.1",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-sonarjs": "0.12.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "lint-staged": "12.1.7",
    "npm-check-updates": "12.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2"
  },
  "engines": {
    "node": "^12.14.0 || ^14.13.1 || >=16",
    "yarn": ">=1.19.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@3.2.0"
}
