{
  "name": "@soluble/tci-monorepo",
  "private": true,
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/ts-jest",
      "**/ts-jest/**"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "yarn workspaces run clean",
    "test": "run-s test:* --",
    "test:unit": "lerna run test:unit -- $@",
    "test:e2e": "lerna run test:e2e -- $@",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "yarn build && changeset publish",
    "typecheck": "lerna run typecheck --stream --parallel",
    "lint": "yarn workspaces run lint",
    "fix:staged": "yarn workspaces run fix:staged",
    "deduplicate": "yarn-deduplicate yarn.lock",
    "reinstall": "lerna clean --yes && lerna run clean && npx rimraf@^3.0 --no-glob ./yarn.lock ./node_modules && yarn install",
    "coverage:publish": "codecov && lerna run coverage:publish -- -f coverage/clover.xml",
    "deps:check": "npx npm-check-updates@^9.1 && lerna exec -- yarn deps:check",
    "deps:update": "npx npm-check-updates@9.1 -u && lerna exec -- yarn deps:update"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.11.2",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "microbundle": "^0.12.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "release": "6.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "testcontainers": "^6.1.1",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "yarn-deduplicate": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream fix:staged"
    }
  },
  "engines": {
    "node": ">=10.13",
    "yarn": ">=1.19.0 <2.0.0",
    "npm": "please-use-yarn"
  }
}
